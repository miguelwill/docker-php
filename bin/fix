#!/bin/bash
set -e

cd /var/www

DIRS="logs tmp .composer .yarn src/public"

# Ensure directories existence
mkdir -p $DIRS

# Fix permissions
chown -R www-data:www-data $DIRS

# Working on src may take a long time so do it in background, exclude public for 2rd chown
chown -R www-data:www-data src/!(public)
